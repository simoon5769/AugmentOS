# Stage 1: Build
FROM node:18-slim AS builder

# Install required tools
RUN apt-get update && apt-get install -y curl unzip git python3 make g++ tini && \
    curl -fsSL https://bun.sh/install | bash && \
    npm install -g typescript tsx ws

ENV PATH="/root/.bun/bin:${PATH}"
WORKDIR /app

# Copy your application code
COPY . .

# Install dependencies and build shared packages and services in the correct order
# Added proper error handling and explicit build steps
RUN echo "ğŸš€ Starting build process..." && \
    bun install && \
    echo "ğŸ“¦ Dependencies installed successfully" && \
    echo "âš™ï¸ Building packages/sdk..." && \
    cd ../sdk && bun run build && \
    echo "âš™ï¸ Building packages/utils..." && \
    cd packages/utils && bun run build && \
    echo "âœ… utils built successfully" && \
    echo "âœ… sdk built successfully" && \
    echo "âš™ï¸ Building packages/agents..." && \
    cd ../agents && bun run build && \
    echo "âœ… agents built successfully" && \
    echo "âš™ï¸ Building packages/cloud..." && \
    cd ../cloud && bun run build && \
    echo "âœ… cloud built successfully" && \
    echo "âš™ï¸ Building packages/apps/livecaptions..." && \
    cd ../apps/livecaptions && bun run build && \
    echo "âœ… livecaptions built successfully" && \
    echo "âš™ï¸ Building packages/apps/dashboard-manager..." && \
    cd ../dashboard-manager && bun run build && \
    echo "âœ… dashboard-manager built successfully" && \
    echo "âš™ï¸ Building packages/apps/notify..." && \
